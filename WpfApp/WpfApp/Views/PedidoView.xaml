<UserControl x:Class="WpfApp.Views.PedidoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:util="clr-namespace:WpfApp.Utils"
             xmlns:models="clr-namespace:WpfApp.Models"
             xmlns:local="clr-namespace:WpfApp.Views"
             xmlns:views="clr-namespace:WpfApp.Views"
             xmlns:vms="clr-namespace:WpfApp.ViewModels"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
             d:DataContext="{d:DesignInstance vms:PedidoViewModel, IsDesignTimeCreatable=True}">
    
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5"
             Text="Cadastro de Pedido" FontSize="24" FontWeight="Bold" 
                   Margin="0,0,0,15"/>
        
        <Label Grid.Row="1" Grid.Column="0" Content="Número Pedido:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Pedido_Id}" VerticalAlignment="Center"/>

        <Label Grid.Row="2" Grid.Column="0" Content="ID_Cliente:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding PessoaId, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>

        <Label Grid.Row="1" Grid.Column="3" Content="Data da Venda:" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="1" Grid.Column="4" SelectedDate="{Binding DataVenda, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>

        <Label Grid.Row="2" Grid.Column="3" Content="Forma Pgto." VerticalAlignment="Center"/>
        <ComboBox Grid.Row="2" Grid.Column="4" Margin="5"
            ItemsSource="{Binding Source={util:EnumValues {x:Type util:FormaPagamento}}}"
            SelectedItem="{Binding FormaPagamento, UpdateSourceTrigger=PropertyChanged}"
            VerticalAlignment="Center"/>
        
        <Label Grid.Row="3" Grid.Column="3" Content="Status:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="3" Grid.Column="4" Margin="5"
            ItemsSource="{Binding Source={util:EnumValues {x:Type util:StatusPedido}}}"
            SelectedItem="{Binding Status, UpdateSourceTrigger=PropertyChanged}"
            VerticalAlignment="Center"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Valor Total:" VerticalAlignment="Center" FontWeight="Bold"/>
        <TextBlock Grid.Row="3" Grid.Column="1" 
           Text="{Binding ValorTotal, StringFormat=C2}" 
           VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5" Text="Itens do Pedido:" 
                   FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
        <ListView Grid.Row="5" Grid.ColumnSpan="5" ItemsSource="{Binding ItensPedido}" Margin="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Produto ID" Width="100" DisplayMemberBinding="{Binding ProdutoId}"/>
                    <GridViewColumn Header="Descrição" Width="200" DisplayMemberBinding="{Binding Produto.Descricao}"/>
                    <GridViewColumn Header="Quantidade" Width="100" DisplayMemberBinding="{Binding Quantidade}"/>
                    <GridViewColumn Header="Preço Unitário" Width="150" DisplayMemberBinding="{Binding PrecoUnitario, StringFormat=C}"/>
                    <GridViewColumn Header="Total Item" Width="150" DisplayMemberBinding="{Binding Total, StringFormat=C}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Grid.Row="6" Grid.Column="4" Content="Salvar Pedido" Margin="0,15,0,0" Width="150" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
